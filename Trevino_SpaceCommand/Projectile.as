package {	import flash.display.*;	import flash.events.*;	import flash.utils.getTimer;		public class Projectile extends MovieClip {		private var dy:Number; // vertical speed		private var lastTime:int;				public function Projectile(x,y:Number, speed: Number) {			// set start position			this.x = x;			this.y = y;			// get speed			dy = speed;			// set up animation			lastTime = getTimer();			addEventListener(Event.ENTER_FRAME,moveprojectile);		}				public function moveprojectile(event:Event) {			// get time passed			var timePassed:int = getTimer()-lastTime;			lastTime += timePassed;						// move bullet			this.y += dy*timePassed/1000;						// bullet past top of screen			if (this.y < 0) {				deleteprojectile();			}					}		// delete bullet from stage and plane list		public function deleteprojectile() {			MovieClip(parent).removeprojectile(this);			parent.removeChild(this);			removeEventListener(Event.ENTER_FRAME,moveprojectile);		}	}}